#ifndef PPMHELPER_HPP
#define PPMHELPER_HPP
#include <list>
#include <string>
#include <vector>

namespace BLYAID001 {
class PPMHelper {
private:
  std::string _filename, _magicNumber, _comments;
  int _rowCount, _colCount, _maxScale;
  bool _greyscale;
  unsigned char *_blockData;

  void parseHeader(std::ifstream &ifs);
  void retrieveData(std::ifstream &ifs);
  void convertToGreyscale(void);

public:
  PPMHelper(void);
  ~PPMHelper(void);
  int LoadImage(std::string filename, bool convertToGreyscale);
  int OutputImage(std::string filename);
  std::string GetComments(void);
  std::string GetFilename(void);
  int GetRowCount(void);
  int GetColCount(void);
  bool IsGreyscale(void);
  unsigned char *GetBlockData(void);
};
} // namespace BLYAID001

#endif
