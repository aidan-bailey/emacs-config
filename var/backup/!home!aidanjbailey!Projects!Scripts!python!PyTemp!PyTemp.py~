import os
import time


def RetrieveTemps(content: str):
    lines = content.split("\n")
    output = list()
    for i in range(3, len(lines)):
        output.append(lines[i][0:lines[i].find("Â°C")+2])
    return output


if __name__ == "__main__":
    while 1:
        sensorData = str(os.popen("sensors").read())
        sensorList = sensorData.split("\n\n")
        lines = RetrieveTemps(sensorList[0])
        output = "CPU TEMP"
        for s in lines:
            output = output + "\n" + s
        os.system("clear")
        print(output)
        time.sleep(2)
